<h3><a class="btn btn-secondary" href="/teacherAuth"><i class="fa fa-plus"></i>Create New</a> List</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>TEACHER ID</th>
            <th>TEACHER LOGIN ID</th>
            <th>PASSWORD </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.teacherId}}</td>
            <td>{{this.teacherLoginID}}</td>
            <td>{{this.teacherPassword}}</td>
        
            <td>
                <a href="/teacherAuth/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i><b>Update</b> &nbsp;&nbsp;</a>
                <a href="/teacherAuth/delete/{{this._id}}" onclick="return confirm('Are you want to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i><b>Trash</b></a>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table> 